<!-- This is a sample XML file that is useful to test any parser that -->
<!-- uses the commandProbe.xsd schema defined for the Command -->
<!-- Continuous Probe -->

  <commandProbe 
    xmlns="http://www.stdc.com/2001/QMS/Probes/Continuous/CommandProbe"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation=
    "http://www.stdc.com/2001/QMS/Probes/Continuous/CommandProbe 
    commandProbe.xsd">
    
    <!-- The Command Probe accepts a request to start and stop
    it. Obviously some commands will exit right away and so will the
    probe. Others may hang around for a while waiting for a stop. -->
    
  <probeRequest>
    <probeControl>
      <action>stop</action>
    </probeControl>
  </probeRequest>
  
  </commandProbe>           
