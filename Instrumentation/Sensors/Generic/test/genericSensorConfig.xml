<sensorConfiguration xmlns="http://www.stdc.com/2001/QMSSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:qms="http://www.stdc.com/2001/QMSSchema"
  xsi:schemaLocation="http://www.stdc.com/2001/QMSSchema
  QMSSchema.xsd">
  
  <!-- This is the CORBA interface that the Generic Sensor instance
  provides with the Command and Control interface.
  We describe that we have a ping method available.-->

  <QMSSchema/>
  <QMSUniqueName>
    <category>GenericSensor</category>
  </QMSUniqueName>
  <interfaceVersion>1.0</interfaceVersion>
  <interfaceDescription>
    QMS Command and Control Citizen Interface
  </interfaceDescription>
  <Offer>
    <variable>
      <name>ping</name>
      <value>boolean</value>
      <searchable/>
      <maptoProperty>1</maptoProperty>
    </variable>
    <variable>
      <name>predictionProbe</name>
      <value>not installed</value>
      <searchable/>
      <maptoProperty>4</maptoProperty>
    </variable>
    <variable> 
      <name>Function</name>
      <value>Generic Sensor deploying a generic probe</value>
    </variable>
    <variable> 
      <name>Authors</name>
      <value>The S/TDC QMS Team</value>
    </variable>
  </Offer>	
  <Instance>
    <variable> 
      <name>Capability File Location</name>
      <value>genericSensorCapability.xml</value>
    </variable>
  </Instance>
</sensorConfiguration>

